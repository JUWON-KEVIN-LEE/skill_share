                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"

                android:layout_marginTop="4dp"
                android:text="md Rakib Hasan"
                app:layout_constraintBottom_toBottomOf="@+id/positiveImageView2"
                app:layout_constraintStart_toEndOf="@+id/positiveImageView2"
                app:layout_constraintTop_toTopOf="@+id/positiveImageView2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear5">

            <TextView
