                android:layout_height="38dp"
                android:src="@android:drawable/sym_def_app_icon" />

            <ImageView
                android:id="@+id/studentImage10"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@android:drawable/sym_def_app_icon" />


